    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // اختيار المنصة
            const platforms = document.querySelectorAll('.platform');
            platforms.forEach(platform => {
                platform.addEventListener('click', function() {
                    platforms.forEach(p => p.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // اختيار كمية الروبوكس
            const robuxOptions = document.querySelectorAll('.robux-option');
            robuxOptions.forEach(option => {
                option.addEventListener('click', function() {
                    robuxOptions.forEach(o => o.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // متابعة إلى الخطوة 2
            document.getElementById('continueBtn').addEventListener('click', function() {
                const username = document.getElementById('username').value;
                const selectedPlatform = document.querySelector('.platform.active');
                
                if (!username || username.length < 3) {
                    alert('الرجاء إدخال اسم مستخدم صحيح');
                    return;
                }
                
                if (!selectedPlatform) {
                    alert('الرجاء اختيار المنصة الخاصة بك');
                    return;
                }
                
                document.getElementById('step1').classList.add('hidden');
                document.getElementById('step2').classList.remove('hidden');
            });
            
            // تأكيد الاختيار والانتقال إلى الخطوة 3
            document.getElementById('selectBtn').addEventListener('click', function() {
                const selectedAmount = document.querySelector('.robux-option.active');
                
                if (!selectedAmount) {
                    alert('الرجاء اختيار كمية الروبوكس');
                    return;
                }
                
                document.getElementById('step2').classList.add('hidden');
                document.getElementById('step3').classList.remove('hidden');
                
                // عرض اسم المستخدم والكمية في الخطوة 4
                const username = document.getElementById('username').value;
                const amount = selectedAmount.getAttribute('data-amount');
                
                document.getElementById('displayUsername').textContent = username;
                document.getElementById('displayAmount').textContent = amount;
                
                // الانتقال إلى الخطوة 4 بعد 3 ثواني (محاكاة للتحميل)
                setTimeout(() => {
                    document.getElementById('step3').classList.add('hidden');
                    document.getElementById('step4').classList.remove('hidden');
                }, 3000);
            });
            
            // بدء التحقق
            document.getElementById('verifyBtn').addEventListener('click', function() {
                alert('سيتم توجيهك إلى صفحة التحقق الآن...');
                // هنا يمكنك إضافة الرمز لإعادة التوجيه إلى صفحة التحقق الفعلية
            });
        });
    </script>
